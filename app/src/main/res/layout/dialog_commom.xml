<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commom_ll"
    android:layout_width="1600dp"
    android:layout_height="900dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/zhuche_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:src="@drawable/back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp">

        <ImageView
            android:id="@+id/zhongxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/zhongxin" />

        <Button
            android:id="@+id/shang_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/zhongxin"

            android:layout_centerHorizontal="true"
            android:background="@drawable/shang_bt" />

        <Button
            android:id="@+id/you_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/zhongxin"
            android:background="@drawable/you_bt" />

        <Button
            android:id="@+id/xia_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zhongxin"
            android:layout_centerHorizontal="true"
            android:background="@drawable/xia_bt" />

        <Button
            android:id="@+id/zuo_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/zuo_bt"
            android:layout_alignBottom="@+id/you_bt"
            android:layout_toStartOf="@+id/zhongxin" />
    </RelativeLayout>
</RelativeLayout>